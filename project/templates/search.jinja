{% extends 'base.jinja' %}
{% block body %}
  <div class="mx-auto max-w-xl p-4">
    <h1 class="text-xl">Search Results</h1>
    {{ render_partial('components/movie-search.jinja', content=description) }}
    <h1 class="text-xl">Our best guess</h1>
    <ul role="list" class="divide-y divide-gray-100">
      {# No loop right now #}
      <li class="flex items-center justify-between gap-x-6 py-5">
        <div class="min-w-0">
          <div class="flex items-start gap-x-3">
            <p class="font-semibold leading-6 text-gray-900 text-sm">{{ response }}</p>
            <p class="mt-0.5 whitespace-nowrap rounded-md bg-green-50 px-1.5 py-0.5 font-medium text-green-700 ring-1 ring-inset ring-green-600/20 text-xs">Best guess!</p>
          </div>
          <div class="mt-1 flex items-center gap-x-2 leading-5 text-gray-500 text-xs">
            <p class="truncate">A great film, might I add!</p>
          </div>
        </div>
        <div class="flex flex-none items-center gap-x-4">
          <a href="{{ movie_link }}" class="rounded-md bg-white px-2.5 py-1.5 font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 text-sm hover:bg-gray-50 sm:block">View on Amazon</a>
        </div>
      </li>
    </ul>
  </div>
{% endblock %}
