<div class="mx-auto w-full border-b bg-white 2xl:max-w-7xl">
  <div x-data="{ open: false }" class="relative mx-auto flex w-full flex-col bg-white p-5 md:flex-row md:items-center md:justify-between md:px-6 lg:px-8">
    <div class="flex flex-row items-center justify-between lg:justify-start">
      <a class="uppercase text-black text-lg tracking-tight focus:outline-none focus:ring lg:text-2xl" href="/">
        <span class="uppecase focus:ring-0 lg:text-lg"> application </span>
      </a>
      <button @click="open = !open" class="inline-flex items-center justify-center p-2 text-gray-400 hover:text-black focus:text-black focus:outline-none md:hidden">
        <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
          <path :class="{'hidden': open, 'inline-flex': !open }" class="inline-flex" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          <path :class="{'hidden': !open, 'inline-flex': open }" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <nav :class="{'flex': open, 'hidden': !open}" class="hidden flex-grow flex-col items-center md:flex md:flex-row md:justify-end md:pb-0">
      <a class="px-2 py-2 text-gray-500 text-sm hover:text-blue-600 md:px-3 lg:ml-auto lg:px-6" href="/blog/about-us"> About </a>
      <a class="px-2 py-2 text-gray-500 text-sm hover:text-blue-600 md:px-3 lg:px-6" href="/blog"> Blog </a>

      <div class="inline-flex list-none items-center gap-2 lg:ml-auto">
        {% if not request.session.user %}
          <a href="/login" class="focus:shadow-outline mt-2 block px-4 py-2 text-gray-500 text-sm hover:text-blue-600 focus:outline-none md:mt-0">Sign in </a>
          <a
            href="/login"
            class="group inline-flex items-center justify-center rounded-full bg-black px-4 py-2 font-semibold text-white text-sm hover:bg-gray-700 focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:bg-gray-800 active:text-white"
          >
            Sign up
          </a>
        {% else %}
          <a href="/logout" class="focus:shadow-outline mt-2 block px-4 py-2 text-gray-500 text-sm hover:text-blue-600 focus:outline-none md:mt-0">Sign Out</a>
        {% endif %}
      </div>
    </nav>
  </div>
</div>
