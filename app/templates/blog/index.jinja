{% extends 'base.jinja' %}
{% block body %}
  <section class="mx-auto flex min-h-screen max-w-6xl flex-col p-24">
    <ul role="list" class="divide-y divide-gray-100 overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
      {% for post in posts %}
        <li class="relative flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 sm:px-6">
          <div class="flex min-w-0 gap-x-4">
            {# <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="/blog/blog-image" alt="" /> #}
            <div class="min-w-0 flex-auto">
              <p class="font-semibold leading-6 text-gray-900 text-sm">
                <a href="/blog/{{ post.slug }}">
                  <span class="absolute inset-x-0 -top-px bottom-0"></span>
                  {{ post.title }}
                </a>
              </p>
              <p class="mt-1 flex leading-5 text-gray-500 text-xs">{{ post.blurb }}</p>
            </div>
          </div>
          <div class="flex shrink-0 items-center gap-x-4">
            <div class="hidden sm:flex sm:flex-col sm:items-end">
              <p class="leading-6 text-gray-900 text-sm">By: Robert Lowe</p>
              <p class="mt-1 leading-5 text-gray-500 text-xs">Published: <time datetime="{{ post.published }}">{{ post.published }}</time></p>
            </div>
            <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
            </svg>
          </div>
        </li>
      {% endfor %}
    </ul>
  </section>
{% endblock %}
